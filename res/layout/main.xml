<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="微信聊天文字加密APP, 请输入加密秘钥和解密秘钥[8位]"
            />
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="加密秘钥(8位):"/>
        <EditText android:layout_width="200dp" android:layout_height="wrap_content" android:password="true" android:id="@+id/encrypto_key"/>
    </LinearLayout>


    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="解密秘钥(8位):"/>
        <EditText android:layout_width="200dp" android:layout_height="wrap_content" android:password="true" android:id="@+id/decrypto_key"/>
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button    android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="  设置并保存   "
                   android:id="@+id/btn_ok" android:onClick="onBtnOk"/></LinearLayout>


    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button    android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="开启加解密服务"
                   android:id="@+id/btn_settings" android:onClick="onBtnSettings"/></LinearLayout>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button    android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="  开启浮动窗口  "
                   android:id="@+id/btn_floatwindow_setting" android:onClick="onBtnFloatWindowSettings"/></LinearLayout>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button    android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="关闭加解密服务并退出"
                   android:id="@+id/btn_close" android:onClick="onBtnClose"/></LinearLayout>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" >
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tip_msg"/>
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/msg_show">
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/msg_show_txt"/>
    </LinearLayout>
</LinearLayout>

